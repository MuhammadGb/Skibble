{
  "compilerOptions": {
    "lib": ["dom", "es2015", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES2015",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/globals/utils"
  ],
  "exclude": ["node_modules"]
}
